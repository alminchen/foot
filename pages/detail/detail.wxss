/* pages/detail/detail.wxss */

.loading-view {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  padding: 10px;
}

.fl {
  float: left;
}

.fr {
  float: right;
}

.img {
  width: 100%;
  height: 300px;
}

.img image {
  display: block;
  width: 100%;
  margin: auto;
  height: 300px;
}

.detailName {
  margin: 20px 0 50px 0;
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  font-size: 16px;
  color: #666;
  font-weight: bold;
}

.nearDo {
  padding: 0 20rpx;
  height: auto;
  overflow: hidden;
  padding-bottom: 30rpx;
}

.nearDo text {
  display: block;
  width: 100%;
  line-height: 45rpx;
  font-size: 14px;
}

.material {
  padding: 0 20rpx;
}

.material text {
  display: inline-block;
  width: 100%;
}

.matNmae {
  font-weight: bold;
  font-size: 18px;
  font-family: 'Microsoft YaHei';
  height: 50rpx;
  line-height: 50rpx;
}

.material .mat_1 {
  margin-top: 10px;
}

.mat_1 text {
  line-height: 60rpx;
  font-size: 14px;
  color: #666;
}

.material .mat_name_1 {
  width: 50%;
}

.material .heavy {
  width: 50%;
}

.finally {
  padding: 0 20rpx;
  overflow: hidden;
  margin-top: 50rpx;
}

.finally .fina_box {
  width: 100%;
  margin-bottom: 20rpx;
}

.finally .fina_1 {
  display: block;
  width: 100%;
  line-height: 60rpx;
  font-size: 16px;
  font-weight: bold;
}

.finally image {
  width: 100%;
  display: block;
  margin: auto;
}

.finally .intro {
  line-height: 60rpx;
  font-size: 12px;
}
